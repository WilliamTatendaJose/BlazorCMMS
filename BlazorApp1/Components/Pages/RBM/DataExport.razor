@code {
    private bool isExporting = false;
    private bool isImporting = false;
    private string currentExport = "";
    private string currentImport = "";
    private ExportSummary? summary;
    private string importMessage = "";
    private string importStatus = "";

    // File inputs for import
    private ElementReference assetsFileInput;
    private ElementReference workOrdersFileInput;
    private ElementReference sparePartsFileInput;

    private string assetsFileName = "";
    private string workOrdersFileName = "";
    private string sparePartsFileName = "";

    private bool hasAssetsFile = false;
    private bool hasWorkOrdersFile = false;
    private bool hasSparePartsFile = false;

    private byte[]? assetsFileData;
    private byte[]? workOrdersFileData;
    private byte[]? sparePartsFileData;

    protected override void OnInitialized()
    {
        summary = ExportService.GetExportSummary();
    }

    private async Task HandleFileClick(ElementReference fileInput)
    {
        try
        {
            await fileInput.FocusAsync();
            await JS.InvokeVoidAsync("triggerFileInput", fileInput.Id);
        }
        catch
        {
            // Fallback - file click will be handled by browser default
        }
    }

    private async Task ExportAssets(string format)
    {
        await PerformExport("Assets", format, () =>
        {
            return format.ToLower() switch
            {
                "csv" => ExportService.ExportAssetsToCSV(),
                "json" => ExportService.ExportAssetsToJSON(),
                "excel" => ExportService.ExportAssetsToExcel(),
                _ => new byte[0]
            };
        });
    }

    private async Task ExportWorkOrders(string format)
    {
        await PerformExport("WorkOrders", format, () =>
        {
            return format.ToLower() switch
            {
                "csv" => ExportService.ExportWorkOrdersToCSV(),
                "json" => ExportService.ExportWorkOrdersToJSON(),
                "excel" => ExportService.ExportWorkOrdersToExcel(),
                _ => new byte[0]
            };
        });
    }

    private async Task ExportSpareParts(string format)
    {

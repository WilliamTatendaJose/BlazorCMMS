    .export-item:hover {
        background: #e0e7ff;
    }

    .export-item button {
        flex-shrink: 0;
        min-width: 120px;
    }

    .export-desc {
        font-size: 12px;
        color: var(--rbm-text-light);
        flex: 1;
    }


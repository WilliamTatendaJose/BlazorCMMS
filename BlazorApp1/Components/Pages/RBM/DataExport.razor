    private async Task PerformImport(string dataType, Func<Task<(bool Success, int ImportedCount, string Message)>> importFunc)
    {
        currentImport = dataType.ToLower().Replace(" ", "");
        isImporting = true;

        try
        {
            var result = await importFunc();
            importStatus = result.Success ? "success" : "error";
            importMessage = result.Message;

            if (result.Success)
            {
                Logger.LogInformation("Import completed: {DataType}, Records: {Count}", dataType, result.ImportedCount);
                summary = ExportService.GetExportSummary();
            }

            await Task.Delay(5000);
            importMessage = "";
        }
        catch (Exception ex)
        {
            importStatus = "error";
            importMessage = $"Import failed: {ex.Message}";
            Logger.LogError(ex, "Import failed for {DataType}", dataType);
        }
        finally
        {
            isImporting = false;
        }
    }


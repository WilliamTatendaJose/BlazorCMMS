@page "/rbm/export"
@page "/rbm/exchange"
@rendermode InteractiveServer
@layout RBMLayout
@using Microsoft.AspNetCore.Authorization
@using BlazorApp1.Services
@attribute [Authorize(Roles = "Admin")]
@inject DataExportService ExportService
@inject NavigationManager Navigation
@inject ILogger<DataExport> Logger
@inject IJSRuntime JS

<PageTitle>Data Export - RBM CMMS</PageTitle>

<div class="rbm-page-header">
    <h1 class="rbm-page-title">🔄 Data Exchange</h1>
    <p class="rbm-page-subtitle">Export system data and import bulk data in multiple formats</p>
</div>

<!-- Export Summary -->
<div class="rbm-card export-summary">
    <div class="rbm-card-header">
        <h3 class="rbm-card-title">📊 Exchange Summary</h3>
    </div>
    <div class="summary-grid">
        <div class="summary-item">
            <div class="summary-label">Total Assets</div>
            <div class="summary-value">@summary?.TotalAssets</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">Work Orders</div>
            <div class="summary-value">@summary?.TotalWorkOrders</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">Spare Parts</div>
            <div class="summary-value">@summary?.TotalSpareParts</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">Documents</div>
            <div class="summary-value">@summary?.TotalDocuments</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">Critical Assets</div>
            <div class="summary-value alert">@summary?.CriticalAssets</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">Overdue WOs</div>
            <div class="summary-value alert">@summary?.OverdueWorkOrders</div>
        </div>
    </div>
</div>

<!-- Export Options -->
<div class="rbm-grid rbm-grid-2" style="gap: 24px; margin-bottom: 24px;">
    <!-- CSV Export -->
    <div class="rbm-card export-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">📄 CSV Export</h3>
            <p class="rbm-card-subtitle">Universal spreadsheet format</p>
        </div>
        <div class="export-content">
            <div class="export-item">
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick='() => ExportAssets("csv")' disabled="@isExporting">
                    @if (isExporting && currentExport == "assets-csv")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>🏭 Assets</span>
                    }
                </button>
                <span class="export-desc">Export all active assets</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick='() => ExportWorkOrders("csv")' disabled="@isExporting">
                    @if (isExporting && currentExport == "workorders-csv")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>📋 Work Orders</span>
                    }
                </button>
                <span class="export-desc">Export all work orders</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick='() => ExportSpareParts("csv")' disabled="@isExporting">
                    @if (isExporting && currentExport == "spareparts-csv")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>⚙️ Spare Parts</span>
                    }
                </button>
                <span class="export-desc">Export spare parts inventory</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick='() => ExportFailureModes("csv")' disabled="@isExporting">
                    @if (isExporting && currentExport == "failuremodes-csv")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>⚠️ Failure Modes</span>
                    }
                </button>
                <span class="export-desc">Export FMEA data</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick='() => ExportDocuments("csv")' disabled="@isExporting">
                    @if (isExporting && currentExport == "documents-csv")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>📄 Documents</span>
                    }
                </button>
                <span class="export-desc">Export document metadata</span>
            </div>
        </div>
    </div>

    <!-- Excel Export -->
    <div class="rbm-card export-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">📊 Excel Export</h3>
            <p class="rbm-card-subtitle">Formatted spreadsheet</p>
        </div>
        <div class="export-content">
            <div class="export-item">
                <button class="rbm-btn rbm-btn-success rbm-btn-sm" @onclick='() => ExportAssets("excel")' disabled="@isExporting">
                    @if (isExporting && currentExport == "assets-excel")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>🏭 Assets</span>
                    }
                </button>
                <span class="export-desc">Excel format with formatting</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-success rbm-btn-sm" @onclick='() => ExportWorkOrders("excel")' disabled="@isExporting">
                    @if (isExporting && currentExport == "workorders-excel")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>📋 Work Orders</span>
                    }
                </button>
                <span class="export-desc">Excel format with styling</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-success rbm-btn-sm" @onclick='() => ExportSpareParts("excel")' disabled="@isExporting">
                    @if (isExporting && currentExport == "spareparts-excel")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>⚙️ Spare Parts</span>
                    }
                </button>
                <span class="export-desc">Excel inventory format</span>
            </div>
        </div>
    </div>

    <!-- JSON Export -->
    <div class="rbm-card export-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">{ } JSON Export</h3>
            <p class="rbm-card-subtitle">Structured data format</p>
        </div>
        <div class="export-content">
            <div class="export-item">
                <button class="rbm-btn rbm-btn-warning rbm-btn-sm" @onclick='() => ExportAssets("json")' disabled="@isExporting">
                    @if (isExporting && currentExport == "assets-json")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>🏭 Assets</span>
                    }
                </button>
                <span class="export-desc">JSON structured data</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-warning rbm-btn-sm" @onclick='() => ExportWorkOrders("json")' disabled="@isExporting">
                    @if (isExporting && currentExport == "workorders-json")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>📋 Work Orders</span>
                    }
                </button>
                <span class="export-desc">JSON structured data</span>
            </div>
            
            <div class="export-item">
                <button class="rbm-btn rbm-btn-warning rbm-btn-sm" @onclick='() => ExportAllData("json")' disabled="@isExporting">
                    @if (isExporting && currentExport == "all-json")
                    {
                        <span class="spinner"></span>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <span>📦 All Data</span>
                    }
                </button>
                <span class="export-desc">Complete database dump</span>
            </div>
        </div>
    </div>
</div>

<!-- Analysis Reports Export -->
<div class="rbm-card export-card">
    <div class="rbm-card-header">
        <h3 class="rbm-card-title">📊 Analysis Reports</h3>
        <p class="rbm-card-subtitle">Export system analysis and reports</p>
    </div>
    <div class="export-content">
        <div class="export-item">
            <button class="rbm-btn rbm-btn-info rbm-btn-sm" @onclick='() => ExportReport("reliability")' disabled="@isExporting">
                @if (isExporting && currentExport == "reliability-report")
                {
                    <span class="spinner"></span>
                    <span>Exporting...</span>
                }
                else
                {
                    <span>📈 Reliability Analysis</span>
                }
            </button>
            <span class="export-desc">MTBF, MTTR, Availability metrics</span>
        </div>
        
        <div class="export-item">
            <button class="rbm-btn rbm-btn-info rbm-btn-sm" @onclick='() => ExportReport("condition")' disabled="@isExporting">
                @if (isExporting && currentExport == "condition-report")
                {
                    <span class="spinner"></span>
                    <span>Exporting...</span>
                }
                else
                {
                    <span>🌡️ Condition Monitoring</span>
                }
            </button>
            <span class="export-desc">Current asset condition status</span>
        </div>
        
        <div class="export-item">
            <button class="rbm-btn rbm-btn-info rbm-btn-sm" @onclick='() => ExportReport("fmea")' disabled="@isExporting">
                @if (isExporting && currentExport == "fmea-report")
                {
                    <span class="spinner"></span>
                    <span>Exporting...</span>
                }
                else
                {
                    <span>⚠️ FMEA Analysis</span>
                }
            </button>
            <span class="export-desc">Failure mode and effects analysis</span>
        </div>
        
        <div class="export-item">
            <button class="rbm-btn rbm-btn-info rbm-btn-sm" @onclick='() => ExportReport("maintenance")' disabled="@isExporting">
                @if (isExporting && currentExport == "maintenance-report")
                {
                    <span class="spinner"></span>
                    <span>Exporting...</span>
                }
                else
                {
                    <span>🔧 Maintenance Schedule</span>
                }
            </button>
            <span class="export-desc">Upcoming maintenance tasks</span>
        </div>
    </div>
</div>

<!-- Data Import Section -->
<div class="rbm-grid rbm-grid-2" style="gap: 24px; margin-bottom: 24px;">
    <div class="rbm-card import-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">📥 Data Import</h3>
            <p class="rbm-card-subtitle">Import data from CSV files</p>
        </div>
        <div class="export-content">
            <div class="import-section">
                <h4 style="margin: 0 0 12px 0; font-size: 14px;">Assets</h4>
                <div class="import-input-group">
                    <input type="file" @ref="assetsFileInput" accept=".csv" style="display: none;" @onchange="OnAssetsFileSelected" />
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="() => HandleFileClick(assetsFileInput)" disabled="@isImporting">
                        Choose CSV
                    </button>
                    <span class="import-status">@assetsFileName</span>
                </div>
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick="ImportAssets" disabled="@(!hasAssetsFile || isImporting)" style="margin-top: 8px; width: 100%;">
                    @if (isImporting && currentImport == "assets")
                    {
                        <span>⏳ Importing...</span>
                    }
                    else
                    {
                        <span>📥 Import Assets</span>
                    }
                </button>
            </div>

            <hr style="margin: 16px 0; border: none; border-top: 1px solid var(--rbm-border);">

            <div class="import-section">
                <h4 style="margin: 0 0 12px 0; font-size: 14px;">Work Orders</h4>
                <div class="import-input-group">
                    <input type="file" @ref="workOrdersFileInput" accept=".csv" style="display: none;" @onchange="OnWorkOrdersFileSelected" />
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="() => HandleFileClick(workOrdersFileInput)" disabled="@isImporting">
                        Choose CSV
                    </button>
                    <span class="import-status">@workOrdersFileName</span>
                </div>
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick="ImportWorkOrders" disabled="@(!hasWorkOrdersFile || isImporting)" style="margin-top: 8px; width: 100%;">
                    @if (isImporting && currentImport == "workorders")
                    {
                        <span>⏳ Importing...</span>
                    }
                    else
                    {
                        <span>📥 Import Work Orders</span>
                    }
                </button>
            </div>

            <hr style="margin: 16px 0; border: none; border-top: 1px solid var(--rbm-border);">

            <div class="import-section">
                <h4 style="margin: 0 0 12px 0; font-size: 14px;">Spare Parts</h4>
                <div class="import-input-group">
                    <input type="file" @ref="sparePartsFileInput" accept=".csv" style="display: none;" @onchange="OnSparePartsFileSelected" />
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="() => HandleFileClick(sparePartsFileInput)" disabled="@isImporting">
                        Choose CSV
                    </button>
                    <span class="import-status">@sparePartsFileName</span>
                </div>
                <button class="rbm-btn rbm-btn-primary rbm-btn-sm" @onclick="ImportSpareParts" disabled="@(!hasSparePartsFile || isImporting)" style="margin-top: 8px; width: 100%;">
                    @if (isImporting && currentImport == "spareparts")
                    {
                        <span>⏳ Importing...</span>
                    }
                    else
                    {
                        <span>📥 Import Spare Parts</span>
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Import Templates -->
    <div class="rbm-card import-templates">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">📋 Import Templates</h3>
            <p class="rbm-card-subtitle">Download CSV templates for import</p>
        </div>
        <div class="export-content">
            <div style="background: var(--rbm-bg); padding: 16px; border-radius: 8px; margin-bottom: 12px;">
                <h4 style="margin: 0 0 8px 0; font-size: 14px;">Assets Template</h4>
                <p style="margin: 0 0 12px 0; font-size: 12px; color: var(--rbm-text-light);">Columns: AssetID, Name, ModelNumber, SerialNumber, Manufacturer, Location, Department, Criticality, Status</p>
                <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="DownloadAssetTemplate">
                    📥 Download Template
                </button>
            </div>

            <div style="background: var(--rbm-bg); padding: 16px; border-radius: 8px; margin-bottom: 12px;">
                <h4 style="margin: 0 0 8px 0; font-size: 14px;">Work Orders Template</h4>
                <p style="margin: 0 0 12px 0; font-size: 12px; color: var(--rbm-text-light);">Columns: WorkOrderID, AssetID, Type, Priority, Status, AssignedTo, DueDate, Description</p>
                <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="DownloadWorkOrderTemplate">
                    📥 Download Template
                </button>
            </div>

            <div style="background: var(--rbm-bg); padding: 16px; border-radius: 8px;">
                <h4 style="margin: 0 0 8px 0; font-size: 14px;">Spare Parts Template</h4>
                <p style="margin: 0 0 12px 0; font-size: 12px; color: var(--rbm-text-light);">Columns: PartNumber, Description, Manufacturer, QuantityInStock, ReorderPoint, UnitCost, Status</p>
                <button class="rbm-btn rbm-btn-outline rbm-btn-sm" @onclick="DownloadSparePartTemplate">
                    📥 Download Template
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Status Messages for Import -->
@if (!string.IsNullOrEmpty(importMessage))
{
    <div class="@($"import-{importStatus}")">
        <span class="message-icon">@(importStatus == "success" ? "✓" : "⚠️")</span>
        <span class="message-text">@importMessage</span>
        <button class="message-close" @onclick="() => importMessage = string.Empty">✕</button>
    </div>
}

<style>
    .export-summary {
        margin-bottom: 24px;
    }


@code {
    // Models
    private class ThresholdSettings
    {
        public double TempWarning { get; set; } = 180;
        public double TempCritical { get; set; } = 200;
        public double VibrationWarning { get; set; } = 4.5;
        public double VibrationCritical { get; set; } = 7.0;
        public double PressureWarning { get; set; } = 150;
        public double PressureCritical { get; set; } = 180;
    }

    private class NotificationPreferences
    {
        public bool EmailCriticalAlerts { get; set; } = true;
        public bool EmailWorkOrderDue { get; set; } = true;
        public bool EmailMaintenanceSchedule { get; set; } = true;
        public bool EmailWeeklyReport { get; set; } = false;
        public string PhoneNumber { get; set; } = "";
        public bool SmsCriticalOnly { get; set; } = true;
    }

    private class AppSettings
    {
        public string SelectedTheme { get; set; } = "light";
    }

    // State
    private ThresholdSettings thresholds = new();
    private NotificationPreferences notifications = new();
    private AppSettings settings = new();
    private BlazorApp1.Models.NotificationSettings? dbNotificationSettings;

    private bool isInitialized = false;
    private bool isSaving = false;
    private bool showDeleteConfirmation = false;
    private string deleteConfirmationText = "";

    private string successMessage = "";
    private string errorMessage = "";

    private DateTime lastBackup = DateTime.Now.AddDays(-1);
    private DateTime lastThresholdSave = DateTime.Now.AddHours(-2);
    private DateTime lastNotificationSave = DateTime.Now.AddHours(-3);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await CurrentUser.InitializeAsync();

            // Verify admin role
            if (CurrentUser.Role != "Admin")
            {
                errorMessage = "You don't have permission to access settings. Admin role required.";
                isInitialized = true;
                return;
            }

            // Get current theme (already initialized in RBMLayout)
            settings.SelectedTheme = ThemeService.GetCurrentTheme();

            // Load saved settings
            await LoadSettings();
            isInitialized = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load settings: {ex.Message}";
            isInitialized = true;
        }
    }

    private async Task LoadSettings()
    {
        // In a production system, this would load from the database
        await Task.Delay(500); // Simulate load
        // Load notification settings from database
        dbNotificationSettings = await NotificationService.GetNotificationSettingsAsync(CurrentUser.UserId);
        
        if (dbNotificationSettings != null)
        {
            notifications.EmailCriticalAlerts = dbNotificationSettings.EmailCriticalAlerts;
            notifications.EmailWorkOrderDue = dbNotificationSettings.EmailWorkOrderDue;
            notifications.EmailMaintenanceSchedule = dbNotificationSettings.EmailMaintenanceSchedule;
            notifications.EmailWeeklyReport = dbNotificationSettings.EmailWeeklyReport;
            notifications.PhoneNumber = dbNotificationSettings.PhoneNumber ?? "";
            notifications.SmsCriticalOnly = dbNotificationSettings.SmsCriticalOnly;
            lastNotificationSave = dbNotificationSettings.ModifiedDate ?? dbNotificationSettings.CreatedDate;
        }

        // Initialize other settings with defaults
        thresholds = new ThresholdSettings();
        settings.SelectedTheme = ThemeService.GetCurrentTheme();
    }

    private async Task SaveThresholds()
    {
        if (isSaving) return;

        try
        {
            isSaving = true;
            successMessage = "";
            errorMessage = "";

            // Validate thresholds
            if (thresholds.TempWarning >= thresholds.TempCritical)
            {
                errorMessage = "Warning threshold must be less than critical threshold";
                return;
            }

            if (thresholds.VibrationWarning >= thresholds.VibrationCritical)
            {
                errorMessage = "Vibration warning must be less than critical threshold";
                return;
            }

            if (thresholds.PressureWarning >= thresholds.PressureCritical)
            {
                errorMessage = "Pressure warning must be less than critical threshold";
                return;
            }

            // Save thresholds
            await Task.Delay(800); // Simulate save

            lastThresholdSave = DateTime.Now;
            successMessage = "✓ Condition thresholds saved successfully";

            await Task.Delay(3000);
            successMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving thresholds: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveNotifications()
    {
        if (isSaving) return;

        try
        {
            isSaving = true;
            successMessage = "";
            errorMessage = "";

            // Validate phone number if SMS enabled
            if (!notifications.SmsCriticalOnly && string.IsNullOrWhiteSpace(notifications.PhoneNumber))
            {
                errorMessage = "Phone number is required for SMS notifications when not in critical-only mode";
                return;
            }

            // Validate phone number format if provided
            if (!string.IsNullOrWhiteSpace(notifications.PhoneNumber))
            {
                var cleanedPhone = new string(notifications.PhoneNumber.Where(char.IsDigit).ToArray());
                if (cleanedPhone.Length < 10)
                {
                    errorMessage = "Please enter a valid phone number with at least 10 digits";
                    return;
                }
            }

            // Create or update notification settings
            var notificationSettings = new BlazorApp1.Models.NotificationSettings
            {
                UserId = CurrentUser.UserId,
                EmailCriticalAlerts = notifications.EmailCriticalAlerts,
                EmailWorkOrderDue = notifications.EmailWorkOrderDue,
                EmailMaintenanceSchedule = notifications.EmailMaintenanceSchedule,
                EmailWeeklyReport = notifications.EmailWeeklyReport,
                PhoneNumber = notifications.PhoneNumber,
                SmsCriticalOnly = notifications.SmsCriticalOnly,
                EnableEmailNotifications = true,
                EnableSmsNotifications = !notifications.SmsCriticalOnly && !string.IsNullOrEmpty(notifications.PhoneNumber)
            };

            // Save to database via NotificationService
            await NotificationService.SaveNotificationSettingsAsync(notificationSettings);

            lastNotificationSave = DateTime.Now;
            successMessage = "✓ Notification preferences saved successfully";

            // Clear message after 3 seconds
            await Task.Delay(3000);
            successMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving notification preferences: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ApplyTheme()
    {
        if (isSaving) return;

        try
        {
            isSaving = true;
            successMessage = "";
            errorMessage = "";

            // Apply the selected theme
            await ThemeService.SetThemeAsync(settings.SelectedTheme);

            successMessage = $"✓ Theme changed to {(settings.SelectedTheme == "dark" ? "Dark" : "Light")} mode";

            await Task.Delay(3000);
            successMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error applying theme: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task BackupNow()
    {
        if (isSaving) return;

        try
        {
            isSaving = true;
            successMessage = "";
            errorMessage = "";

            await Task.Delay(1500); // Simulate backup

            lastBackup = DateTime.Now;
            successMessage = "✓ Backup completed successfully";

            await Task.Delay(3000);
            successMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating backup: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ConfirmDeleteAllData()
    {
        if (isSaving) return;
        deleteConfirmationText = "";
        showDeleteConfirmation = true;
    }

    private void CancelDeleteAllData()
    {
        showDeleteConfirmation = false;
        deleteConfirmationText = "";
    }

    private async Task DeleteAllDataConfirmed()
    {
        if (deleteConfirmationText != "DELETE" || isSaving) return;

        try
        {
            isSaving = true;
            errorMessage = "";

            await Task.Delay(2000); // Simulate deletion

            successMessage = "✓ All data deleted successfully. System reset.";
            showDeleteConfirmation = false;
            deleteConfirmationText = "";

            // Optionally redirect after deletion
            await Task.Delay(2000);
            Navigation.NavigateTo("/rbm/dashboard", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting data: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}

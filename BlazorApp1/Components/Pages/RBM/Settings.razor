@page "/rbm/settings"
@rendermode InteractiveServer
@layout RBMLayout
@using Microsoft.AspNetCore.Authorization
@using BlazorApp1.Services
@using BlazorApp1.Models
@using BlazorApp1.Data
@attribute [Authorize(Roles = "SuperAdmin,TenantAdmin,Admin")]
@inject BlazorApp1.Services.DataService DataService
@inject BlazorApp1.Services.NotificationService NotificationService
@inject BlazorApp1.Services.ThemeService ThemeService
@inject CurrentUserService CurrentUser
@inject NavigationManager Navigation

<div class="rbm-page-header">
    <h1 class="rbm-page-title">⚙️ Settings & Integrations</h1>
    <p class="rbm-page-subtitle">Configure system preferences and external connections</p>
    <span class="settings-status">@(isSaving ? "⏳ Saving..." : "✓ Ready")</span>
</div>

@if (!isInitialized)
{
    <div class="settings-loading">
        <div style="text-align: center; padding: 60px;">
            <div style="font-size: 48px; margin-bottom: 16px;">⏳</div>
            <div style="color: var(--rbm-text-light);">Loading settings...</div>
        </div>
    </div>
}
else
{
    <!-- Status Messages -->
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="settings-success-message" role="status" aria-live="polite">
            <span class="message-icon">✓</span>
            <span class="message-text">@successMessage</span>
            <button class="message-close" @onclick="() => successMessage = string.Empty" aria-label="Close">✕</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="settings-error-message" role="alert" aria-live="assertive">
            <span class="message-icon">⚠️</span>
            <span class="message-text">@errorMessage</span>
            <button class="message-close" @onclick="() => errorMessage = string.Empty" aria-label="Close">✕</button>
        </div>
    }

    <!-- Condition Thresholds -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <div>
                <h3 class="rbm-card-title">🌡️ Condition Monitoring Thresholds</h3>
                <p class="rbm-card-subtitle">Set alert thresholds for equipment parameters</p>
            </div>
        </div>
        <div style="padding: 20px;">
            <div class="rbm-grid rbm-grid-2">
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Temperature Warning (°F)</label>
                    <input type="number" class="rbm-form-input" @bind="thresholds.TempWarning" 
                           placeholder="180" min="0" max="300" disabled="@isSaving"
                           title="Temperature warning threshold in Fahrenheit">
                    <small class="form-hint">Default: 180°F</small>
                </div>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Temperature Critical (°F)</label>
                    <input type="number" class="rbm-form-input" @bind="thresholds.TempCritical" 
                           placeholder="200" min="0" max="300" disabled="@isSaving"
                           title="Temperature critical threshold in Fahrenheit">
                    <small class="form-hint">Default: 200°F</small>
                </div>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Vibration Warning (mm/s)</label>
                    <input type="number" step="0.1" class="rbm-form-input" @bind="thresholds.VibrationWarning" 
                           placeholder="4.5" min="0" max="50" disabled="@isSaving"
                           title="Vibration warning threshold in millimeters per second">
                    <small class="form-hint">Default: 4.5 mm/s</small>
                </div>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Vibration Critical (mm/s)</label>
                    <input type="number" step="0.1" class="rbm-form-input" @bind="thresholds.VibrationCritical" 
                           placeholder="7.0" min="0" max="50" disabled="@isSaving"
                           title="Vibration critical threshold in millimeters per second">
                    <small class="form-hint">Default: 7.0 mm/s</small>
                </div>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Pressure Warning (PSI)</label>
                    <input type="number" class="rbm-form-input" @bind="thresholds.PressureWarning" 
                           placeholder="150" min="0" max="500" disabled="@isSaving"
                           title="Pressure warning threshold in PSI">
                    <small class="form-hint">Default: 150 PSI</small>
                </div>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Pressure Critical (PSI)</label>
                    <input type="number" class="rbm-form-input" @bind="thresholds.PressureCritical" 
                           placeholder="180" min="0" max="500" disabled="@isSaving"
                           title="Pressure critical threshold in PSI">
                    <small class="form-hint">Default: 180 PSI</small>
                </div>
            </div>
            <div style="margin-top: 20px;">
                <button class="rbm-btn rbm-btn-primary" @onclick="SaveThresholds" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span>⏳ Saving...</span>
                    }
                    else
                    {
                        <span>💾 Save Thresholds</span>
                    }
                </button>
                <small class="form-hint" style="display: block; margin-top: 8px;">Last saved: @lastThresholdSave.ToString("MMM dd, yyyy HH:mm")</small>
            </div>
        </div>
    </div>

    <!-- Notification Preferences -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <div>
                <h3 class="rbm-card-title">🔔 Notification Preferences</h3>
                <p class="rbm-card-subtitle">Choose how you want to receive alerts</p>
            </div>
        </div>
        <div style="padding: 20px;">
            <div style="margin-bottom: 24px;">
                <h4 style="font-size: 16px; font-weight: 600; margin-bottom: 16px;">📧 Email Notifications</h4>
                <div style="display: flex; flex-direction: column; gap: 12px;">
                    <label class="settings-checkbox-label">
                        <input type="checkbox" @bind="notifications.EmailCriticalAlerts" disabled="@isSaving" class="settings-checkbox">
                        <span class="checkbox-content">
                            <strong>Critical health score alerts</strong>
                            <small>Get notified when equipment health drops below threshold</small>
                        </span>
                    </label>
                    <label class="settings-checkbox-label">
                        <input type="checkbox" @bind="notifications.EmailWorkOrderDue" disabled="@isSaving" class="settings-checkbox">
                        <span class="checkbox-content">
                            <strong>Work order due date reminders</strong>
                            <small>Receive reminders for upcoming work orders</small>
                        </span>
                    </label>
                    <label class="settings-checkbox-label">
                        <input type="checkbox" @bind="notifications.EmailMaintenanceSchedule" disabled="@isSaving" class="settings-checkbox">
                        <span class="checkbox-content">
                            <strong>Upcoming maintenance schedule</strong>
                            <small>Get notified about scheduled maintenance</small>
                        </span>
                    </label>
                    <label class="settings-checkbox-label">
                        <input type="checkbox" @bind="notifications.EmailWeeklyReport" disabled="@isSaving" class="settings-checkbox">
                        <span class="checkbox-content">
                            <strong>Weekly reliability report</strong>
                            <small>Receive comprehensive weekly system reports</small>
                        </span>
                    </label>
                </div>
            </div>

            <hr class="settings-divider">

            <div style="margin-bottom: 24px;">
                <h4 style="font-size: 16px; font-weight: 600; margin-bottom: 16px;">📱 SMS Notifications</h4>
                <div class="rbm-form-group">
                    <label class="rbm-form-label">Phone Number</label>
                    <input type="tel" class="rbm-form-input" @bind="notifications.PhoneNumber" 
                           placeholder="+1 (555) 123-4567" disabled="@isSaving"
                           title="Phone number for SMS notifications">
                    <small class="form-hint">Enter phone number with country code (e.g., +1 for USA)</small>
                </div>
                <label class="settings-checkbox-label">
                    <input type="checkbox" @bind="notifications.SmsCriticalOnly" disabled="@isSaving" class="settings-checkbox">
                    <span class="checkbox-content">
                        <strong>Only critical alerts via SMS</strong>
                        <small>Save SMS quota by only sending critical alerts</small>
                    </span>
                </label>
            </div>

            <button class="rbm-btn rbm-btn-primary" @onclick="SaveNotifications" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>⏳ Saving...</span>
                }
                else
                {
                    <span>💾 Save Preferences</span>
                }
            </button>
            <small class="form-hint" style="display: block; margin-top: 8px;">Last saved: @lastNotificationSave.ToString("MMM dd, yyyy HH:mm")</small>
        </div>
    </div>

    <!-- Integrations -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <div>
                <h3 class="rbm-card-title">🔗 External Integrations</h3>
                <p class="rbm-card-subtitle">Connect to IoT sensors and SCADA systems</p>
            </div>
        </div>
        <div style="padding: 20px;">
            <div class="integrations-grid">
                <div class="integration-card">
                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div class="integration-icon" style="background: var(--rbm-accent);">🌐</div>
                            <div>
                                <div style="font-weight: 600; font-size: 16px;">IoT Platform</div>
                                <div style="font-size: 13px; color: var(--rbm-text-light);">Real-time sensor data</div>
                            </div>
                        </div>
                        <span class="integration-badge integration-badge-connected">Connected</span>
                    </div>
                    <p style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 12px;">
                        Automatically sync temperature, vibration, and pressure readings from IoT sensors.
                    </p>
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" disabled="@isSaving">⚙️ Configure</button>
                </div>

                <div class="integration-card">
                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div class="integration-icon" style="background: var(--rbm-primary);">📊</div>
                            <div>
                                <div style="font-weight: 600; font-size: 16px;">SCADA System</div>
                                <div style="font-size: 13px; color: var(--rbm-text-light);">Industrial automation</div>
                            </div>
                        </div>
                        <span class="integration-badge integration-badge-disconnected">Not Connected</span>
                    </div>
                    <p style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 12px;">
                        Integrate with SCADA for automated data collection and equipment status monitoring.
                    </p>
                    <button class="rbm-btn rbm-btn-primary rbm-btn-sm" disabled="@isSaving">🔗 Connect</button>
                </div>

                <div class="integration-card">
                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div class="integration-icon" style="background: var(--rbm-warning);">📧</div>
                            <div>
                                <div style="font-weight: 600; font-size: 16px;">Email Service</div>
                                <div style="font-size: 13px; color: var(--rbm-text-light);">SMTP integration</div>
                            </div>
                        </div>
                        <span class="integration-badge integration-badge-connected">Connected</span>
                    </div>
                    <p style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 12px;">
                        Send automated notifications and reports via email.
                    </p>
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" disabled="@isSaving">⚙️ Configure</button>
                </div>

                <div class="integration-card">
                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div class="integration-icon" style="background: var(--rbm-success);">💾</div>
                            <div>
                                <div style="font-weight: 600; font-size: 16px;">Cloud Backup</div>
                                <div style="font-size: 13px; color: var(--rbm-text-light);">Azure Blob Storage</div>
                            </div>
                        </div>
                        <span class="integration-badge integration-badge-connected">Connected</span>
                    </div>
                    <p style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 12px;">
                        Automatic daily backups to secure cloud storage.
                    </p>
                    <button class="rbm-btn rbm-btn-outline rbm-btn-sm" disabled="@isSaving">⚙️ Configure</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Theme Selector -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">🎨 Appearance</h3>
        </div>
        <div style="padding: 20px;">
            <div class="rbm-form-group" style="max-width: 300px;">
                <label class="rbm-form-label">Theme</label>
                <select class="rbm-form-select" @bind="settings.SelectedTheme" disabled="@isSaving" title="Choose application theme">
                    <option value="light">☀️ Light (Industrial Blue-Grey)</option>
                    <option value="dark">🌙 Dark (Modern)</option>
                </select>
            </div>
            <button class="rbm-btn rbm-btn-primary" @onclick="ApplyTheme" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>⏳ Applying...</span>
                }
                else
                {
                    <span>🎨 Apply Theme</span>
                }
            </button>
            <small class="form-hint" style="display: block; margin-top: 8px;">
                Theme changes apply immediately across the entire application
            </small>
        </div>
    </div>

    <!-- Data Management -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">💾 Data Management</h3>
        </div>
        <div style="padding: 20px;">
            <div class="rbm-grid rbm-grid-2">
                <div>
                    <h4 style="font-size: 16px; margin-bottom: 12px;">🔄 Backup & Restore</h4>
                    <p style="font-size: 14px; color: var(--rbm-text-light); margin-bottom: 16px;">
                        Last backup: <strong>@lastBackup.ToString("MMM dd, yyyy HH:mm")</strong>
                    </p>
                    <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                        <button class="rbm-btn rbm-btn-primary" @onclick="BackupNow" disabled="@isSaving">
                            💾 Backup Now
                        </button>
                        <button class="rbm-btn rbm-btn-outline" disabled="@isSaving">
                            📥 Restore from Backup
                        </button>
                    </div>
                </div>

                <div>
                    <h4 style="font-size: 16px; margin-bottom: 12px;">📊 Data Export</h4>
                    <p style="font-size: 14px; color: var(--rbm-text-light); margin-bottom: 16px;">
                        Export system data for external analysis
                    </p>
                    <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                        <button class="rbm-btn rbm-btn-secondary" disabled="@isSaving">
                            📊 Export to Excel
                        </button>
                        <button class="rbm-btn rbm-btn-outline" disabled="@isSaving">
                            📄 Export to CSV
                        </button>
                    </div>
                </div>
            </div>

            <div style="margin-top: 24px; padding: 16px; background: rgba(229, 57, 53, 0.1); border-left: 4px solid var(--rbm-danger); border-radius: 8px;">
                <strong style="color: var(--rbm-danger);">⚠️ Danger Zone</strong>
                <p style="margin: 8px 0 12px 0; font-size: 14px;">
                    Permanently delete all system data. This action cannot be undone.
                </p>
                <button class="rbm-btn rbm-btn-danger rbm-btn-sm" @onclick="ConfirmDeleteAllData" disabled="@isSaving">
                    🗑️ Delete All Data
                </button>
            </div>
        </div>
    </div>

    <!-- System Information -->
    <div class="rbm-card settings-card">
        <div class="rbm-card-header">
            <h3 class="rbm-card-title">ℹ️ System Information</h3>
        </div>
        <div style="padding: 20px;">
            <div class="rbm-grid rbm-grid-3">
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">Version</div>
                    <div style="font-weight: 600;">v2.5.0</div>
                </div>
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">Database</div>
                    <div style="font-weight: 600;">SQL Server 2022</div>
                </div>
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">License</div>
                    <div style="font-weight: 600;">Enterprise</div>
                </div>
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">.NET Version</div>
                    <div style="font-weight: 600;">.NET 10</div>
                </div>
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">Runtime</div>
                    <div style="font-weight: 600;">Blazor Interactive Server</div>
                </div>
                <div>
                    <div style="font-size: 13px; color: var(--rbm-text-light); margin-bottom: 4px;">Last Updated</div>
                    <div style="font-weight: 600;">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirmation)
{
    <div class="settings-modal-backdrop" @onclick="CancelDeleteAllData">
        <div class="settings-modal" @onclick:stopPropagation="true">
            <div class="settings-modal-header">
                <h3 class="settings-modal-title">🗑️ Delete All Data</h3>
                <button class="settings-modal-close" @onclick="CancelDeleteAllData">&times;</button>
            </div>
            <div class="settings-modal-body">
                <div style="background: rgba(229, 57, 53, 0.1); padding: 16px; border-radius: 8px; margin-bottom: 16px;">
                    <p style="margin: 0; color: var(--rbm-text);">
                        <strong>This action is permanent and cannot be undone.</strong>
                    </p>
                    <p style="margin: 8px 0 0 0; color: var(--rbm-text-light); font-size: 14px;">
                        All assets, work orders, readings, documents, and settings will be permanently deleted.
                    </p>
                </div>

                <p style="color: var(--rbm-text); margin-bottom: 12px;">
                    Type <strong>"DELETE"</strong> to confirm:
                </p>
                <input type="text" class="rbm-form-input" @bind="deleteConfirmationText" 
                       placeholder="Type DELETE to confirm" disabled="@isSaving"
                       style="margin-bottom: 20px;">
            </div>
            <div class="settings-modal-footer">
                <button class="rbm-btn rbm-btn-outline" @onclick="CancelDeleteAllData" disabled="@isSaving">
                    Cancel
                </button>
                <button class="rbm-btn rbm-btn-danger" @onclick="DeleteAllDataConfirmed" 
                        disabled="@(deleteConfirmationText != "DELETE" || isSaving)">
                    @if (isSaving)
                    {
                        <span>⏳ Deleting...</span>
                    }
                    else
                    {
                        <span>🗑️ Permanently Delete</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

<style>
    .settings-status {
        font-size: 12px;
        color: var(--rbm-text-light);
        font-weight: 500;
        margin-left: auto;
    }

    .settings-loading {
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .settings-card {
        margin-bottom: 24px;
    }

    .settings-success-message {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        background: #e8f5e9;
        border-left: 4px solid #43a047;
        border-radius: 6px;
        color: #2e7d32;
        font-size: 14px;
        margin-bottom: 20px;
        animation: slideIn 0.3s ease;
    }

    html.dark-mode .settings-success-message {
        background: rgba(102, 187, 106, 0.15);
        color: #66bb6a;
        border-left-color: #66bb6a;
    }

    .settings-error-message {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        background: #ffebee;
        border-left: 4px solid #e53935;
        border-radius: 6px;
        color: #c62828;
        font-size: 14px;
        margin-bottom: 20px;
        animation: slideIn 0.3s ease;
    }

    html.dark-mode .settings-error-message {
        background: rgba(239, 83, 80, 0.15);
        color: #ef5350;
        border-left-color: #ef5350;
    }

    .message-icon {
        font-size: 16px;
        flex-shrink: 0;
    }

    .message-text {
        flex: 1;
    }

    .message-close {
        background: none;
        border: none;
        color: inherit;
        cursor: pointer;
        font-size: 16px;
        padding: 0;
        margin-left: 8px;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

    .message-close:hover {
        opacity: 1;
    }

    .form-hint {
        display: block;
        color: var(--rbm-text-light);
        font-size: 12px;
        margin-top: 4px;
    }

    .settings-divider {
        margin: 20px 0;
        border: none;
        border-top: 1px solid var(--rbm-border);
        transition: border-color 0.3s ease;
    }

    .settings-checkbox-label {
        display: flex;
        align-items: flex-start;
        padding: 12px;
        background: var(--rbm-bg);
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.2s;
        gap: 10px;
    }

    .settings-checkbox-label:hover {
        background: rgba(25, 118, 210, 0.05);
    }

    html.dark-mode .settings-checkbox-label:hover {
        background: rgba(66, 165, 245, 0.1);
    }

    .settings-checkbox {
        margin-top: 2px;
        cursor: pointer;
        accent-color: #1976d2;
        flex-shrink: 0;
    }

    html.dark-mode .settings-checkbox {
        accent-color: #42a5f5;
    }

    .checkbox-content {
        flex: 1;
    }

    .checkbox-content strong {
        display: block;
        margin-bottom: 2px;
        color: var(--rbm-text);
    }

    .checkbox-content small {
        color: var(--rbm-text-light);
        font-size: 12px;
    }

    .integrations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 16px;
    }

    .integration-card {
        padding: 20px;
        border: 1px solid var(--rbm-border);
        border-radius: 12px;
        transition: all 0.2s;
        background: var(--rbm-card-bg);
    }

    .integration-card:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    html.dark-mode .integration-card:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .integration-icon {
        width: 48px;
        height: 48px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        flex-shrink: 0;
    }

    .integration-badge {
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 12px;
        font-weight: 600;
        white-space: nowrap;
    }

    .integration-badge-connected {
        background: #e8f5e9;
        color: #2e7d32;
    }

    html.dark-mode .integration-badge-connected {
        background: rgba(102, 187, 106, 0.2);
        color: #66bb6a;
    }

    .integration-badge-disconnected {
        background: #f5f5f5;
        color: #666;
    }

    html.dark-mode .integration-badge-disconnected {
        background: #333;
        color: #999;
    }

    /* Modal Styles */
    .settings-modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;

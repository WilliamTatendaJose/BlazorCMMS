@page "/Account/Manage/Passkeys"

@using BlazorApp1.Data
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@using System.Buffers.Text

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Passkeys | RBM CMMS</PageTitle>

<h2>🔑 Passkeys</h2>
<p class="page-description">Manage your passkeys for secure, passwordless authentication</p>

<StatusMessage />

<!-- Info Card -->
<div class="info-card">
    <div class="info-icon">💡</div>
    <div class="info-content">
        <h4>What are Passkeys?</h4>
        <p>
            Passkeys are a secure and convenient way to sign in without passwords. 
            They use biometrics (fingerprint, face) or device PIN and are resistant to phishing attacks.
        </p>
    </div>
</div>

<!-- Current Passkeys -->
<div class="section-card">
    <div class="section-header">
        <h3>📋 Your Passkeys</h3>
        <span class="passkey-count">@(currentPasskeys?.Count ?? 0) registered</span>
    </div>

    @if (currentPasskeys is { Count: > 0 })
    {
        <div class="passkeys-list">
            @foreach (var passkey in currentPasskeys)
            {
                <div class="passkey-item">
                    <div class="passkey-icon">🔐</div>
                    <div class="passkey-info">
                        <div class="passkey-name">@(passkey.Name ?? "Unnamed passkey")</div>
                        <div class="passkey-meta">
                            Added: @passkey.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                    <div class="passkey-actions">
                        @{
                            var credentialId = Base64Url.EncodeToString(passkey.CredentialId);
                        }
                        <form @formname="@($"update-passkey-{credentialId}")" @onsubmit="UpdatePasskey" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="CredentialId" value="@credentialId" />
                            <button type="submit" name="Action" value="rename" class="btn-icon" title="Rename">
                                ✏️
                            </button>
                            <button type="submit" name="Action" value="delete" class="btn-icon btn-danger" title="Delete">
                                🗑️
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">🔑</div>
            <h4>No passkeys registered</h4>
            <p>Add a passkey to enable secure, passwordless sign-in</p>
        </div>
    }
</div>

<!-- Add New Passkey -->
<div class="section-card">
    <div class="section-header">
        <h3>➕ Add New Passkey</h3>
    </div>
    <div class="add-passkey-content">
        <form @formname="add-passkey" @onsubmit="AddPasskey" method="post">
            <AntiforgeryToken />
            @if (currentPasskeys is { Count: >= MaxPasskeyCount })
            {
                <div class="warning-message">
                    <span>⚠️</span>
                    <span>You have reached the maximum number of allowed passkeys (@MaxPasskeyCount). Please delete one before adding a new one.</span>
                </div>
            }
            else
            {
                <div class="add-passkey-info">
                    <p>
                        When you click "Add Passkey", your browser will prompt you to create a new passkey using:
                    </p>
                    <ul>
                        <li>🖐️ Your fingerprint</li>
                        <li>👤 Face recognition</li>
                        <li>🔢 Device PIN</li>
                        <li>🔐 Security key (USB/NFC)</li>
                    </ul>
                </div>
                <PasskeySubmit Operation="PasskeyOperation.Create" Name="Input" class="btn-primary btn-large">
                    <span>🔑</span> Add a New Passkey
                </PasskeySubmit>
            }
        </form>
    </div>
</div>

<!-- Security Tips -->
<div class="security-tips">
    <h4>🛡️ Security Tips</h4>
    <ul>
        <li><strong>Register multiple passkeys</strong> - Use different devices as backup</li>
        <li><strong>Name your passkeys</strong> - Makes it easier to identify and manage them</li>
        <li><strong>Remove unused passkeys</strong> - Keep your account clean and secure</li>
        <li><strong>Keep devices updated</strong> - Ensures best security and compatibility</li>
    </ul>
</div>


    }

    .strength-bar {
        height: 100%;
        border-radius: 2px;
        transition: width 0.3s, background 0.3s;
    }

    .strength-label {
        font-size: 12px;
        margin-top: 4px;
        display: block;
    }

    .match-indicator {
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }


@page "/Account/Manage/ChangePassword"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using BlazorApp1.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager
@inject ILogger<ChangePassword> Logger

<PageTitle>Change Password | RBM CMMS</PageTitle>

<div class="change-password-page">
    <h2>🔐 Change Password</h2>
    <p class="page-description">Update your account password to keep your account secure</p>

    <StatusMessage Message="@message" />

    <div class="password-tips">
        <h4>🛡️ Password Requirements</h4>
        <ul>
            <li>At least 6 characters long</li>
            <li>Contains uppercase letter (A-Z)</li>
            <li>Contains lowercase letter (a-z)</li>
            <li>Contains a number (0-9)</li>
        </ul>
    </div>

    <EditForm Model="Input" FormName="change-password" OnValidSubmit="OnValidSubmitAsync" method="post">
        <DataAnnotationsValidator />
        <ValidationSummary class="validation-summary" role="alert" />
        
        <div class="form-group">
            <label for="Input.OldPassword">Current Password</label>
            <div class="password-field">
                <InputText type="@(showOldPassword ? "text" : "password")" @bind-Value="Input.OldPassword" id="Input.OldPassword" 
                           class="form-input" autocomplete="current-password" placeholder="Enter your current password" />
                <button type="button" class="toggle-password" @onclick="() => showOldPassword = !showOldPassword">
                    @(showOldPassword ? "🙈" : "👁️")
                </button>
            </div>
            <ValidationMessage For="() => Input.OldPassword" class="validation-error" />
        </div>
        
        <div class="form-group">
            <label for="Input.NewPassword">New Password</label>
            <div class="password-field">
                <InputText type="@(showNewPassword ? "text" : "password")" @bind-Value="Input.NewPassword" id="Input.NewPassword" 
                           class="form-input" autocomplete="new-password" placeholder="Enter your new password" />
                <button type="button" class="toggle-password" @onclick="() => showNewPassword = !showNewPassword">
                    @(showNewPassword ? "🙈" : "👁️")
                </button>
            </div>
            <ValidationMessage For="() => Input.NewPassword" class="validation-error" />
            @if (!string.IsNullOrEmpty(Input.NewPassword))
            {
                <div class="password-strength">
                    <div class="strength-bar" style="width: @GetPasswordStrength(Input.NewPassword)%; background: @GetPasswordStrengthColor(Input.NewPassword);"></div>
                </div>
                <span class="strength-label" style="color: @GetPasswordStrengthColor(Input.NewPassword);">@GetPasswordStrengthText(Input.NewPassword)</span>
            }
        </div>
        
        <div class="form-group">
            <label for="Input.ConfirmPassword">Confirm New Password</label>
            <div class="password-field">
                <InputText type="@(showConfirmPassword ? "text" : "password")" @bind-Value="Input.ConfirmPassword" id="Input.ConfirmPassword" 
                           class="form-input" autocomplete="new-password" placeholder="Confirm your new password" />
                <button type="button" class="toggle-password" @onclick="() => showConfirmPassword = !showConfirmPassword">
                    @(showConfirmPassword ? "🙈" : "👁️")
                </button>
            </div>
            <ValidationMessage For="() => Input.ConfirmPassword" class="validation-error" />
            @if (!string.IsNullOrEmpty(Input.ConfirmPassword))
            {
                @if (Input.NewPassword == Input.ConfirmPassword)
                {
                    <span class="match-indicator match">✅ Passwords match</span>
                }
                else
                {
                    <span class="match-indicator no-match">❌ Passwords do not match</span>
                }
            }
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn-primary">🔒 Update Password</button>
        </div>
    </EditForm>

    <div class="security-note">
        <span class="note-icon">💡</span>
        <div>
            <strong>Tip:</strong> After changing your password, you may need to sign in again on your other devices.
        </div>
    </div>
</div>

<style>
    .change-password-page {
        max-width: 500px;
    }

    .change-password-page h2 {
        margin: 0 0 8px 0;
        font-size: 22px;
        color: #37474f;
    }

    .page-description {
        color: #78909c;
        margin: 0 0 24px 0;
    }

    .password-tips {
        background: rgba(2, 136, 209, 0.05);
        border: 1px solid rgba(2, 136, 209, 0.2);
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 24px;
    }

    .password-tips h4 {
        margin: 0 0 12px 0;
        font-size: 14px;
        color: #0288d1;
    }

    .password-tips ul {
        margin: 0;
        padding-left: 20px;
        color: #546e7a;
        font-size: 13px;
    }

    .password-tips li {
        margin-bottom: 4px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #37474f;
        margin-bottom: 8px;
    }

    .password-field {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 12px 48px 12px 16px;
        border: 1px solid #cfd8dc;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.2s, box-shadow 0.2s;
        box-sizing: border-box;
    }

    .form-input:focus {
        outline: none;
        border-color: #0288d1;
        box-shadow: 0 0 0 3px rgba(2, 136, 209, 0.1);
    }

    .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
        padding: 4px;
    }

    .validation-summary {
        background: rgba(229, 57, 53, 0.1);
        color: #c62828;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        list-style: none;
    }

    .validation-error {
        display: block;
        color: #e53935;
        font-size: 13px;

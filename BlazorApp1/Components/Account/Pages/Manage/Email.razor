@page "/Account/Manage/Email"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using BlazorApp1.Data

@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Email Settings | RBM CMMS</PageTitle>

<div class="email-page">
    <h2>📧 Email Settings</h2>
    <p class="page-description">Manage your email address and verification status</p>

    <StatusMessage Message="@message"/>

    <!-- Current Email Status -->
    <div class="current-email-card">
        <div class="email-status">
            <div class="email-info">
                <label>Current Email</label>
                <div class="email-value">@email</div>
            </div>
            <div class="status-badge @(isEmailConfirmed ? "verified" : "unverified")">
                @if (isEmailConfirmed)
                {
                    <span>✅ Verified</span>
                }
                else
                {
                    <span>⚠️ Not Verified</span>
                }
            </div>
        </div>
        
        @if (!isEmailConfirmed)
        {
            <div class="verification-prompt">
                <p>Your email is not verified. Please verify your email to ensure account security.</p>
                <form @onsubmit="OnSendEmailVerificationAsync" @formname="send-verification" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="btn-secondary">📨 Send Verification Email</button>
                </form>
            </div>
        }
    </div>

    <!-- Change Email -->
    <div class="section-card">
        <h3>✏️ Change Email Address</h3>
        <p class="section-description">Enter a new email address. A confirmation link will be sent to verify it.</p>
        
        <EditForm Model="Input" FormName="change-email" OnValidSubmit="OnValidSubmitAsync" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="validation-summary" role="alert" />
            
            <div class="form-group">
                <label for="Input.NewEmail">New Email Address</label>
                <InputText @bind-Value="Input.NewEmail" id="Input.NewEmail" class="form-input" 
                           autocomplete="email" placeholder="Enter new email address" />
                <ValidationMessage For="() => Input.NewEmail" class="validation-error" />
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">📧 Change Email</button>
            </div>
        </EditForm>
    </div>

    <!-- Info Note -->
    <div class="info-note">
        <span class="note-icon">💡</span>
        <div>
            <strong>Note:</strong> After changing your email, you'll need to verify the new address before it becomes active.
            You'll continue using your current email until verification is complete.
        </div>
    </div>
</div>


@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="RBM CMMS - Reliability-Based Maintenance Management System" />
    <meta name="theme-color" content="#0288d1" />
    
    <!-- Theme initialization - MUST be before any content renders -->
    <script>
        (function() {
            const savedTheme = localStorage.getItem('rbm-theme');
            if (savedTheme === 'dark') {
                document.documentElement.classList.add('dark-mode');
                document.documentElement.setAttribute('data-theme', 'dark');
            }
        })();
    </script>
    
    <link rel="stylesheet" href="css/rbm-styles.css" />
    <title>RBM CMMS - Reliability-Based Maintenance Management System</title>
    
    <!-- Load theme manager for interactive features -->
    <script src="js/theme-manager.js"></script>
    
    <style>
        :root {
            --rbm-primary: #37474f;
            --rbm-primary-light: #546e7a;
            --rbm-primary-dark: #263238;
            --rbm-accent: #0288d1;
            --rbm-accent-light: #03a9f4;
            --rbm-success: #43a047;
            --rbm-warning: #fb8c00;
            --rbm-danger: #e53935;
            --rbm-bg: #eceff1;
            --rbm-card-bg: #ffffff;
            --rbm-border: #cfd8dc;
            --rbm-text: #263238;
            --rbm-text-light: #607d8b;
        }

        * {
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
            background: var(--rbm-bg);
            color: var(--rbm-text);
            line-height: 1.5;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        input, button, textarea, select {
            font-family: inherit;
        }

        :focus-visible {
            outline: 2px solid var(--rbm-accent);
            outline-offset: 2px;
        }

        .skip-to-content {
            position: absolute;
            top: -40px;
            left: 0;
            background: var(--rbm-accent);
            color: white;
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-to-content:focus {
            top: 0;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-to-content">Skip to main content</a>
    <main id="main-content">
        @Body
    </main>

    <!-- Error boundary -->
    <noscript>
        <div style="padding: 20px; text-align: center; background: #fff3cd; border: 1px solid #ffc107;">
            <p>JavaScript is required to use this application. Please enable JavaScript in your browser settings.</p>
        </div>
    </noscript>
</body>
</html>

@inherits LayoutComponentBase
@layout BlazorApp1.Components.Layout.RBMLayout
@using Microsoft.AspNetCore.Identity
@using BlazorApp1.Data

@inject SignInManager<ApplicationUser> SignInManager

<div class="account-manage-container">
    <!-- Account Header -->
    <div class="account-header">
        <div class="account-header-content">
            <a href="/rbm/profile" class="back-to-rbm">
                <span>←</span> Back to RBM
            </a>
            <h1>⚙️ Account Settings</h1>
            <p>Manage your profile, security, and account preferences</p>
        </div>
    </div>

    <div class="account-layout">
        <!-- Side Navigation -->
        <div class="account-sidebar">
            <nav class="account-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Profile</div>
                    <NavLink class="account-nav-item" href="Account/Manage" Match="NavLinkMatch.All">
                        <span class="nav-icon">👤</span>
                        <span class="nav-label">My Profile</span>
                    </NavLink>
                    <NavLink class="account-nav-item" href="Account/Manage/Email">
                        <span class="nav-icon">📧</span>
                        <span class="nav-label">Email</span>
                    </NavLink>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Security</div>
                    <NavLink class="account-nav-item" href="Account/Manage/ChangePassword">
                        <span class="nav-icon">🔐</span>
                        <span class="nav-label">Password</span>
                    </NavLink>
                    <NavLink class="account-nav-item" href="Account/Manage/TwoFactorAuthentication">
                        <span class="nav-icon">📱</span>
                        <span class="nav-label">Two-Factor Auth</span>
                    </NavLink>
                    <NavLink class="account-nav-item" href="Account/Manage/Passkeys">
                        <span class="nav-icon">🔑</span>
                        <span class="nav-label">Passkeys</span>
                    </NavLink>
                    @if (hasExternalLogins)
                    {
                        <NavLink class="account-nav-item" href="Account/Manage/ExternalLogins">
                            <span class="nav-icon">🔗</span>
                            <span class="nav-label">External Logins</span>
                        </NavLink>
                    }
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Data</div>
                    <NavLink class="account-nav-item" href="Account/Manage/PersonalData">
                        <span class="nav-icon">📦</span>
                        <span class="nav-label">Personal Data</span>
                    </NavLink>
                    <NavLink class="account-nav-item danger" href="Account/Manage/DeletePersonalData">
                        <span class="nav-icon">⚠️</span>
                        <span class="nav-label">Delete Account</span>
                    </NavLink>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="account-content">
            @Body
        </div>
    </div>
</div>

<style>
    .account-manage-container {
        min-height: 100%;
        background: var(--rbm-bg, #f5f7fa);
    }

    .account-header {
        background: linear-gradient(135deg, #0288d1 0%, #37474f 100%);
        padding: 32px;
        color: white;
        margin: -24px -24px 24px -24px;
    }

    .account-header-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .back-to-rbm {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: rgba(255,255,255,0.8);
        text-decoration: none;
        font-size: 14px;
        margin-bottom: 16px;
        transition: color 0.2s;
    }

    .back-to-rbm:hover {
        color: white;
    }

    .account-header h1 {
        margin: 0 0 8px 0;
        font-size: 28px;
        font-weight: 700;
    }

    .account-header p {
        margin: 0;
        opacity: 0.8;
    }

    .account-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 24px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .account-sidebar {
        background: white;
        border-radius: 12px;
        padding: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        height: fit-content;
        position: sticky;
        top: 24px;
    }

    .account-nav {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .nav-section {
        padding: 8px 0;
    }

    .nav-section:not(:last-child) {
        border-bottom: 1px solid #eceff1;
    }

    .nav-section-title {
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        color: #90a4ae;
        padding: 8px 16px;
        letter-spacing: 0.5px;
    }

    .account-nav-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        border-radius: 8px;
        text-decoration: none;
        color: #546e7a;
        font-size: 14px;
        transition: all 0.2s;
    }

    .account-nav-item:hover {
        background: #f5f7fa;
        color: #37474f;
    }

    .account-nav-item.active {
        background: rgba(2, 136, 209, 0.1);
        color: #0288d1;
        font-weight: 600;
    }

    .account-nav-item.danger {
        color: #e53935;
    }

    .account-nav-item.danger:hover {
        background: rgba(229, 57, 53, 0.1);
    }

    .nav-icon {
        font-size: 18px;
        width: 24px;
        text-align: center;
    }

    .nav-label {
        flex: 1;
    }

    .account-content {
        background: white;
        border-radius: 12px;
        padding: 32px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        min-height: 400px;
    }

    /* Responsive */
    @@media (max-width: 900px) {
        .account-layout {
            grid-template-columns: 1fr;
        }

        .account-sidebar {
            position: static;
        }

        .account-nav {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 4px;
        }

        .nav-section {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
            padding: 4px 0;
            border-bottom: none !important;
        }

        .nav-section-title {
            display: none;
        }

        .account-nav-item {
            padding: 8px 12px;
            font-size: 13px;
        }

        .nav-icon {
            font-size: 16px;
        }
    }

    /* Override default form styles to match RBM theme */
    .account-content .form-control,
    .account-content .form-input {
        padding: 12px 16px;
        border: 1px solid #cfd8dc;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .account-content .form-control:focus,
    .account-content .form-input:focus {
        outline: none;
        border-color: #0288d1;
        box-shadow: 0 0 0 3px rgba(2, 136, 209, 0.1);
    }

    .account-content .btn-primary {
        background: linear-gradient(135deg, #0288d1 0%, #0277bd 100%);
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: transform 0.1s, box-shadow 0.2s;
    }

    .account-content .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(2, 136, 209, 0.3);
    }

    .account-content .text-danger {
        color: #e53935 !important;
    }

    .account-content h3, .account-content h2 {
        color: #37474f;
        margin-bottom: 20px;
    }

    .account-content .form-floating {
        margin-bottom: 16px;
    }

    .account-content .form-floating label {
        color: #78909c;
    }
</style>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
